{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "globalTypesPath": "./src/env.d.ts"
  },
  "include": ["src/**/*", "src/**/*.vue", "src/**/*.ts", "src/**/*.d.ts", "vite.config.ts"]
}
