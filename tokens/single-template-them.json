{
  "color": {
    "base": {
      "white": { "$value": "#ffffff", "$type": "color" },
      "black": { "$value": "#000000", "$type": "color" },
      "gray": {
        "50": { "$value": "#f9fafb", "$type": "color" },
        "75": { "$value": "#f4f7f9", "$type": "color" },
        "100": { "$value": "#f3f4f6", "$type": "color" },
        "200": { "$value": "#e5e7eb", "$type": "color" },
        "300": { "$value": "#d1d5db", "$type": "color" },
        "400": { "$value": "#9ca3af", "$type": "color" },
        "500": { "$value": "#6b7280", "$type": "color" },
        "600": { "$value": "#4b5563", "$type": "color" },
        "700": { "$value": "#374151", "$type": "color" },
        "800": { "$value": "#1f2937", "$type": "color" },
        "900": { "$value": "#111827", "$type": "color" }
      }
    },
    "brand": {
      "primary": { "$value": "#0057ff", "$type": "color" },
      "hover": { "$value": "#0047e5", "$type": "color" },
      "active": { "$value": "#0036b3", "$type": "color" }
    },
    "semantic": {
      "bg": {
        "primary": { "$value": "{color.base.white}", "$type": "color" },
        "secondary": { "$value": "{color.base.gray.50}", "$type": "color" },
        "page": { "$value": "{color.base.gray.75}", "$type": "color" }
      },
      "text": {
        "primary": { "$value": "{color.base.gray.800}", "$type": "color" },
        "secondary": { "$value": "{color.base.gray.500}", "$type": "color" },
        "muted": { "$value": "{color.base.gray.400}", "$type": "color" },
        "inverse": { "$value": "{color.base.white}", "$type": "color" }
      },
      "border": {
        "default": { "$value": "{color.base.gray.300}", "$type": "color" },
        "subtle": { "$value": "{color.base.gray.200}", "$type": "color" }
      }
    }
  },
  "font": {
    "size": {
      "xs": { "$value": "12px", "$type": "dimension" },
      "sm": { "$value": "13px", "$type": "dimension" },
      "md": { "$value": "14px", "$type": "dimension" },
      "lg": { "$value": "16px", "$type": "dimension" },
      "xl": { "$value": "18px", "$type": "dimension" }
    },
    "weight": {
      "regular": { "$value": "400", "$type": "fontWeight" },
      "medium": { "$value": "500", "$type": "fontWeight" },
      "semibold": { "$value": "600", "$type": "fontWeight" },
      "bold": { "$value": "700", "$type": "fontWeight" }
    }
  },
  "space": {
    "xs": { "$value": "6px", "$type": "dimension" },
    "sm": { "$value": "8px", "$type": "dimension" },
    "md": { "$value": "12px", "$type": "dimension" },
    "lg": { "$value": "16px", "$type": "dimension" },
    "xl": { "$value": "20px", "$type": "dimension" }
  },
  "radius": {
    "sm": { "$value": "6px", "$type": "dimension" },
    "md": { "$value": "8px", "$type": "dimension" },
    "lg": { "$value": "12px", "$type": "dimension" },
    "full": { "$value": "9999px", "$type": "dimension" }
  },
  "shadow": {
    "sm": {
      "$value": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "$type": "shadow"
    },
    "md": {
      "$value": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "$type": "shadow"
    }
  },
  "component": {
    "button": {
      "primary": {
        "bg": { "$value": "{color.brand.primary}", "$type": "color" },
        "color": { "$value": "{color.semantic.text.inverse}", "$type": "color" }
      }
    }
  }
}
